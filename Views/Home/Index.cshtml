@using todo.Models;

@model List<Todo>

@{
    ViewData["Title"] = "Att göra lista";
}

@if (Model.Count == 0)
{
    <p>@ViewBag.Message</p>
    <p>Just nu finns det inga uppgifter. <a asp-controller="Home" asp-action="Add">Lägg till en ny</a></p>
}
else
{
    @* Visa partial view TodoCount *@
    <div class="count">
    @Html.Partial("_CompletedTodoCount", ViewData["TodoCount"])
    @Html.Partial("_TodoCount", ViewData["TodoCount"])
</div>
    <div class="todo-list">

    @foreach (var todo in Model)
        {
            <div class="todo">
                <form method="post" asp-action="MarkComplete">
                    <input type="hidden" name="Id" value="@todo.Id" />
                    <label for="item" class="container @(todo.IsCompleted ? "done" : "")">
                        <input type="checkbox" name="item" id="item" @(todo.IsCompleted ? "checked" : "")
                            onclick="this.form.submit()">
                        @todo.Title
                        <span class="checkmark"></span>
                    </label>
                </form>
                <div class="controls">
                    <button>Radera</button>
                    <button>Ändra</button>
                </div>
                <p>@todo.Description</p>
            </div>
        }
    </div>

}
